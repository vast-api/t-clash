{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "removeComments": true,
    "strict": true,
    "lib": ["ES2020", "ES2020.Promise"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["bin", "dist"]
}
